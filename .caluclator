
num1 = int(input("enter first number: "))
op = input("enter operator: ")
num2 = int(input("enter second number: "))

if op == "+":
    print (num1 + num2)
if op == "*" or op == "x" or op == "X":
    print (num1 * num2)
if op == "-":
    print(num1 - num2)
if op == "/":
    print(num1 / num2)
else:
    print("invalid operator")
